# IoT Dashboard - Configurações de Ambiente
# Copie este arquivo para .env e ajuste as configurações

# Configurações do Banco de Dados
DB_HOST=iot-db
DB_NAME=iot_metrics
DB_USER=iot_user
DB_PASS=iot_password
DB_ROOT_PASS=root_password

# Configurações do Redis
REDIS_HOST=iot-redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Configurações do Dashboard
DASHBOARD_PORT=8080
DASHBOARD_HOST=0.0.0.0

# Configurações do Coletor
COLLECTION_INTERVAL=5
RETENTION_DAYS=7

# Configurações de Alerta
ALERT_CPU_THRESHOLD=80
ALERT_MEMORY_THRESHOLD=85
ALERT_DISK_THRESHOLD=90

# Configurações de Log
LOG_LEVEL=INFO
LOG_FILE=/var/log/iot-collector.log

# Configurações de Segurança
ENABLE_HTTPS=false
SSL_CERT_PATH=
SSL_KEY_PATH=
